@model HospitalManagementSystem.Models.News
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this News?</h2>
<a href="/News/List">Cancel</a>
<h3>News ID: @Model.newsID</h3>
<h4>News Title: @Model.newsTitle</h4>
<div>
    <p>News Description: @Model.newsDescription</p>
</div>
<form action="/News/Delete/@Model.newsID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>

